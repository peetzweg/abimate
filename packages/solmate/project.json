{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/solmate/src",
  "projectType": "library",
  "implicitDependencies": ["chop"],
  "targets": {
    "install": {
      "executor": "nx:run-commands",
      "outputs": ["packages/solmate/lib/lib"],
      "options": {
        "cwd": "packages/solmate/lib",
        "commands": [
          {
            "command": "forge install"
          }
        ]
      }
    },
    "build-forge": {
      "executor": "nx:run-commands",
      "outputs": ["packages/solmate/lib/out"],
      "options": {
        "cwd": "packages/solmate/lib",
        "commands": [
          {
            "command": "forge build"
          }
        ]
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "install"
        }
      ]
    },
    "copy-contracts": {
      "executor": "nx:run-commands",
      "outputs": ["packages/solmate/tmp"],
      "options": {
        "cwd": "packages/solmate",
        "commands": [
          { "command": "rm -rf ./tmp && mkdir ./tmp" },
          {
            "command": "for file in $(find  ./lib/out -name '*.json' | grep -v -e 'Mock' -e 'DSTest' -e 'Test' -e 'Hevm' -e 'ERC721'); do cp $file ./tmp; done"
          }
        ]
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build-forge"
        }
      ]
    },
    "build-typechain": {
      "executor": "nx:run-commands",
      "outputs": ["packages/solmate/src/types"],
      "options": {
        "cwd": "packages/solmate",
        "commands": [
          {
            "command": "typechain --target=ethers-v5 'tmp/*.json' --out-dir ./src/types"
          }
        ]
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "copy-contracts"
        },
        {
          "projects": "self",
          "target": "build-forge"
        }
      ]
    },
    "build-abis": {
      "executor": "nx:run-commands",
      "outputs": ["packages/solmate/src/*.ts"],
      "options": {
        "cwd": "packages/solmate",
        "commands": [
          {
            "command": "node ../../dist/apps/chop/main.js ./src ./tmp/*.json"
          }
        ]
      },
      "dependsOn": [
        {
          "projects": "dependencies",
          "target": "build"
        },
        {
          "projects": "self",
          "target": "copy-contracts"
        }
      ]
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/solmate",
        "main": "packages/solmate/src/index.ts",
        "rootDir": "packages/solmate/src",
        "tsConfig": "packages/solmate/tsconfig.lib.json",
        "assets": ["packages/solmate/*.md", "packages/solmate/LICENSE"]
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build-typechain"
        },
        {
          "projects": "self",
          "target": "build-abis"
        }
      ]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs solmate {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/solmate/**/*.ts"]
      }
    }
  },
  "tags": []
}
