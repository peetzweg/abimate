{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/openzeppelin/src",
  "projectType": "library",
  "targets": {
    "build-hardhat": {
      "executor": "nx:run-commands",
      "outputs": ["packages/openzeppelin/lib/artifacts"],
      "options": {
        "cwd": "packages/openzeppelin/lib",
        "commands": [
          {
            "command": "hardhat compile"
          }
        ]
      }
    },
    "copy-contracts": {
      "executor": "nx:run-commands",
      "outputs": ["packages/openzeppelin/tmp"],
      "options": {
        "cwd": "packages/openzeppelin",
        "commands": [
          { "command": "rm -rf ./tmp && mkdir ./tmp" },
          {
            "command": "for file in $(find  ./lib/artifacts/contracts/ -name '*.json' | grep -v -e 'dbg' -e 'Mock' -e 'IGovernor' -e 'ERC721' -e 'ERC1363'); do cp $file ./tmp; done"
          }
        ]
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build-hard"
        }
      ]
    },
    "build-typechain": {
      "executor": "nx:run-commands",
      "outputs": ["packages/openzeppelin/types"],
      "options": {
        "cwd": "packages/openzeppelin",
        "commands": [
          {
            "command": "typechain --target=ethers-v5 'tmp/*.json' --out-dir ./src/types"
          }
        ]
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "copy-contracts"
        },
        {
          "projects": "self",
          "target": "build-hardhat"
        }
      ]
    },
    "build-abis": {
      "executor": "nx:run-commands",
      "outputs": ["packages/openzeppelin/*.ts"],
      "options": {
        "cwd": "packages/openzeppelin",
        "commands": [
          {
            "command": "node ../../dist/apps/core/main.js ./src ./tmp/*.json"
          }
        ]
      },
      "dependsOn": [
        {
          "projects": "dependencies",
          "target": "build"
        },
        {
          "projects": "self",
          "target": "copy-contracts"
        }
      ]
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/openzeppelin",
        "main": "packages/openzeppelin/src/index.ts",
        "rootDir": "packages/openzeppelin/src",
        "tsConfig": "packages/openzeppelin/tsconfig.lib.json",
        "assets": [
          "packages/openzeppelin/*.md",
          "packages/openzeppelin/LICENSE"
        ]
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build-typechain"
        },
        {
          "projects": "self",
          "target": "build-abis"
        }
      ]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs openzeppelin {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/openzeppelin/**/*.ts"]
      }
    }
  },
  "tags": []
}
