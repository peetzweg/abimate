{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@abimate/compound": ["packages/compound/src/index.ts"],
      "@abimate/openzeppelin": ["packages/openzeppelin/src/index.ts"],
      "@abimate/solmate": ["packages/solmate/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
